
@model StudyControl.Models.Student;

@{
    ViewData["Title"] = "ViewAllCourse";
}

<h1>ViewAllCourse</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="page-header">
    <h1>
        Успеваемость<br>
        @Html.DisplayFor(model => model.FullName)
    </h1>
</div>


<div class="panel-body">
    <div class="form-group">
        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="basic-datatable">
            <thead>
                <tr>
                    <!--th>Строка РП</th-->
                    <th>Дисциплина</th>
                    <th>Экз</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in Model.StudentCourses)
                {
                <tr>
                    <td>
                        @a.Course.Name
                    </td>
                    <td>@a.Grade</td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
